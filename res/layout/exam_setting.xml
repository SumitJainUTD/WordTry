<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:textSize="20dp"
        android:text="@string/Exam_Setting" />
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="65dp"
        android:textSize="20dp"
        android:text="Choose The List" />
    
    <Spinner
        android:id="@+id/Choose_List" 
        android:layout_width="fill_parent"
        android:gravity="center"
         android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:entries="@array/List_Names"
        />
    
    <TextView
        android:id="@+id/TotalWordsAvailable_Exam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="25dp"
        android:textSize="20dp"
        android:text="Words Available : " />

    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
    
        <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="25dp"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:text="No Of Question:" />
        
        <EditText 
          android:id="@+id/NoOfExamQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:gravity="center"
        android:paddingTop="25dp"
        android:width="100dp"
        android:textSize="20dp"/>
        
        
    </LinearLayout>
    
    
    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Create_Exam"
        android:onClick="ShowExam" />
</LinearLayout>